    script.
      $('#close').click(function(e){
        $('.top-notice').addClass("hide")
      })      
      function scroll() {
        if ($(window).scrollTop() >= 400) {
        $('.scroll').addClass("fix");
        } else {
        $('.scroll').removeClass("fix");
        }
        }
       window.onscroll = scroll;
      function back() {
      $('.scroll').on('click', function(e){
      $('html, body').animate({
      'scrollTop':0
      },1200);
      e.preventDefault();
      });
      } 
